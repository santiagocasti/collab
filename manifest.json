{
    "manifest_version": 2,

    "name": "Collab",
    "description": "Work collaboratively offline using this app.",
    "version": "1",

    "app": {
        "background": {
            "scripts": [
                "components/hashing.js",
                "components/replicaIdentity.js",
                "components/peerIdentity.js",
                "components/loggingUtils.js",
                "components/networking.js",
                "components/messagePassingCommons.js",
                "components/backEndMessaging.js",
                "components/replicationController.js",
                "components/applicationController.js",
                "components/crdt.js",
                "components/context.js",
                "background.js"
            ]
        }
    },

    "sockets": {
        "udp": {
            "multicastMembership": "",
            "multicastmembership": "",
            "bind": "",
            "send": "",
            "multicast-membership" : ""
        },
        "tcp": {
            "connect": ""
        },
        "tcpServer": {
            "listen": ""
        }
    },

    "permissions": [
        "system.network",
        {
            "socket": [
                "udp-send-to"
            ]
        }
    ]

}